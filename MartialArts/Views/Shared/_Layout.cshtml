<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - وب سایت رسمی باشگاه الغدیر</title>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/bootstrap-rtl.min.css" rel="stylesheet"/>
    <link href="~/Content/Master.css" rel="stylesheet"/>
    <link href="~/Content/font-awesome.css" rel="stylesheet"/>
</head>
<body>
<div class="container">
    <div class="row">
        <div>
            <nav class="nav navbar navbar-inverse">
                <div class="nav navbar-inner">
                    @Html.ActionLink("خانه", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
                    @Html.ActionLink("مدیریت", "ControlPanel", "Admin", new {area = "Admin"}, new {@class = "navbar-brand navbar-left", @id = "admin-area"})
                </div>

            </nav>
        </div>
    </div>
</div>

<div class="container body-content">
    @RenderBody()
</div>

<script src="~/Scripts/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
@RenderSection("GalleryScript", false)
@RenderSection("scripts", false)    
</body>
</html>
@model IEnumerable<DomainModel.Post>

<div class="panel panel-default">
    <div class="panel-heading">

                <p class="text-right" style="float: right">@Html.DisplayNameFor(model => model.PostTitle)</p>
                <p class="text-left">@Html.DisplayNameFor(model => model.PublishDate)</p>

 





    </div>
    <table class="table table-striped table-bordered">
        @foreach (var item in Model)
        {

            <tr>
                <td class="text-right">
                    @Html.ActionLink(item.PostTitle, "PostDetails", new {id = item.PostId})
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.PublishDate , new {@class="text-left"})
                </td>

            </tr>
        }

    </table>
</div>
